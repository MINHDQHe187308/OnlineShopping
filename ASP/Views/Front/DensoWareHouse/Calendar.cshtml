<script>
    (function () {
        // Adjust resource row min-height so rows with stacked/leveled events get enough vertical space.
        function adjustResourceRowHeights() {
            // FullCalendar resource row containers
            var resourceRows = document.querySelectorAll('.fc-resource-timeline .fc-resource, .fc-resource-timeline .fc-resource-cell, .fc-resource');
            if (!resourceRows || resourceRows.length === 0) return;

            var labelCells = Array.from(document.querySelectorAll('.fc-datagrid .fc-datagrid-cell-frame'));
            resourceRows.forEach(function (row, idx) {
                // find the element that visually contains timeline events for this resource
                var container = row.querySelector('.fc-timeline-lane-frame') || row.querySelector('.fc-resource-cell') || row;
                if (!container) container = row;

                // collect visible events that belong to this resource row
                var events = row.querySelectorAll('.fc-event');
                if (!events || events.length === 0) {
                    // clear any inline height if no events
                    container.style.minHeight = '';
                    container.style.height = '';
                    return;
                }

                // Determine stacking levels by unique 'top' offsets relative to container
                var containerRect = container.getBoundingClientRect();
                var tops = new Set();
                events.forEach(function (ev) {
                    var evRect = ev.getBoundingClientRect();
                    // compute top offset relative to container
                    var topOffset = Math.round(evRect.top - containerRect.top);
                    // ignore invisible or zero-size elements
                    if (evRect.width < 2 || evRect.height < 2) return;
                    tops.add(topOffset);
                });

                var levels = Math.max(1, tops.size);

                // Heuristics: compute per-level height from a sample event (fallback to 36px)
                var sample = events[0].getBoundingClientRect();
                var perLevel = (sample && sample.height > 8) ? Math.round(sample.height) : 36;

                // Add small padding so items don't touch
                var padding = 8;
                var newMin = Math.max(56, levels * perLevel + padding);

             
                container.style.minHeight = newMin + 'px';
                container.style.height = 'auto';

              
                try {
                  
                    var resourceId = row.getAttribute('data-resource-id') || (row.dataset && row.dataset.resourceId) || (row.querySelector('[data-resource-id]') && row.querySelector('[data-resource-id]').getAttribute('data-resource-id'));
                    var leftCell = null;
                    if (resourceId) {
                        // First try to find any element in the page that carries this resource id
                        var allMatches = document.querySelectorAll('[data-resource-id="' + resourceId + '"]');
                        for (var m = 0; m < allMatches.length; m++) {
                            var el = allMatches[m];
                            if (!leftCell) {
                                // prefer explicit frame element when present
                                leftCell = el.querySelector('.fc-datagrid-cell-frame') || el.querySelector('.fc-datagrid-cell') || el;
                            }
                            // if the element itself looks like the label frame, take it
                            if (el.classList && el.classList.contains('fc-datagrid-cell-frame')) {
                                leftCell = el;
                                break;
                            }
                        }

                        // If still not found, try a few fallback selectors
                        if (!leftCell) {
                            var selectors = [
                                '.fc-datagrid [data-resource-id="' + resourceId + '"] .fc-datagrid-cell-frame',
                                '.fc-datagrid .fc-datagrid-row[data-resource-id="' + resourceId + '"] .fc-datagrid-cell-frame',
                                '.fc-datagrid .fc-datagrid-cell[data-resource-id="' + resourceId + '"] .fc-datagrid-cell-frame',
                                '.fc-datagrid [data-resource-id="' + resourceId + '"]',
                                '.fc-datagrid .fc-datagrid-cell[data-resource-id="' + resourceId + '"]'
                            ];
                            for (var si = 0; si < selectors.length; si++) {
                                try {
                                    leftCell = document.querySelector(selectors[si]);
                                    if (leftCell) break;
                                } catch (ignore) { }
                            }
                        }
                    }

                    // Fallback: use same index if counts match or labelCells available
                    if (!leftCell && labelCells && labelCells.length > idx) {
                        leftCell = labelCells[idx];
                    }

                    if (leftCell) {
                        // Apply to the found leftCell
                        try {
                            leftCell.style.minHeight = newMin + 'px';
                            leftCell.style.height = 'auto';
                        } catch (e) { }

                        // Also apply to any other elements that mention the same data-resource-id
                        try {
                            var otherMatches = document.querySelectorAll('.fc-datagrid [data-resource-id="' + resourceId + '"] , [data-resource-id="' + resourceId + '"]');
                            otherMatches.forEach(function (el) {
                                try {
                                    el.style.minHeight = newMin + 'px';
                                    el.style.height = 'auto';
                                    var parentRow = el.closest('tr, .fc-datagrid-row, .fc-datagrid-cell');
                                    if (parentRow) {
                                        parentRow.style.minHeight = newMin + 'px';
                                        parentRow.style.height = 'auto';
                                    }
                                } catch (ignore) { }
                            });
                        } catch (ignoreAll) { }
                    }
                } catch (e) {
                    // ignore errors in best-effort sync
                }
            });
        }

        function observeCalendar() {
            var calendarEl = document.getElementById('calendar');
            if (!calendarEl) return;

            // Initial adjust after small delay to allow initial render
            setTimeout(adjustResourceRowHeights, 250);

            var mo = new MutationObserver(function () {
                if (mo._timeout) clearTimeout(mo._timeout);
                mo._timeout = setTimeout(function () {
                    adjustResourceRowHeights();
                }, 150);
            });

            mo.observe(calendarEl, { childList: true, subtree: true, attributes: true });

            // Also update on window resize and orientation change
            window.addEventListener('resize', function () { setTimeout(adjustResourceRowHeights, 150); });
            window.addEventListener('orientationchange', function () { setTimeout(adjustResourceRowHeights, 150); });
        }

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', observeCalendar);
        } else {
            observeCalendar();
        }
    })();
</script>