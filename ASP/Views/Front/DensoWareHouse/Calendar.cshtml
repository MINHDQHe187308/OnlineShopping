    const orderDetailsUrlTemplate = '@Url.Action("GetOrderDetails", "DensoWareHouse")';
    const orders = modelData.Orders;
    const customers = modelData.Customers;

    function onClickFullScreen(){
        if (isOnFullScreenMode()) {
            exitOnFullScreenMode();
        } else {
            onFullScreenMode();
        }
    }

    function isOnFullScreenMode() {
        var res = document.fullscreenElement || document.fullScreen || document.mozFullScreen || document.webkitIsFullScreen || document.msIsFullScreen || (document.msFullscreenElement != null);
        return res;
    }
    function exitOnFullScreenMode() {
        if (document.exitFullscreen) {
            document.exitFullscreen();
        } else if (document.mozCancelFullScreen) { /* Firefox */
            document.mozCancelFullScreen();
        } else if (document.webkitExitFullscreen) { /* Chrome, Safari and Opera */
            document.webkitExitFullscreen();
        } else if (document.msExitFullscreen) { /* IE/Edge */
            document.msExitFullscreen();
        }

        const element = document.getElementById('head-menu');
        if (element) {
          element.classList.remove('div-hidden');
        }
    }
    function onFullScreenMode() {
        var elem = document.documentElement;
        if (elem.requestFullscreen) {
            elem.requestFullscreen();
        } else if (elem.mozRequestFullScreen) { /* Firefox */
            elem.mozRequestFullScreen();
        } else if (elem.webkitRequestFullscreen) { /* Chrome, Safari and Opera */
            elem.webkitRequestFullscreen();
        } else if (elem.msRequestFullscreen) { /* IE/Edge */
            elem.msRequestFullscreen();
        }

        const element = document.getElementById('head-menu');
        if (element) {
          element.classList.add('div-hidden');
        }   
    }
</script>
