@{
    ViewData["Title"] = "Orders Statistics";
    Layout = "../Shared/Layout/Front/_Layout";
}
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.plot.ly/plotly-2.27.0.min.js"></script>
<div class="chart-container">
    <div id="loading" style="display: flex; justify-content: center; align-items: center; height: 100%;">
        <p>Loading data...</p>
    </div>
    <div id="myChart" style="display: none; width: 100%; height: 100%;"></div>
</div>
<style>
    .chart-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 500px;
        margin: 20px 0;
        background: #f8f9fa;
        border-radius: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        padding: 20px;
    }
     
    #myChart {
        max-width: 100%;
        max-height: 100%;
        position: relative;
    }

    .js-plotly-plot .plotly .modebar {
        left: 10%;
        transform: translateX(-10%);
    }
</style>
<script src="~/js/Statisticv1.js"></script>

